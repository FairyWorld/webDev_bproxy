{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "strict": true,
    "typeRoots" : [
      "src/types/",
    ],
    "allowJs": false,
    "lib": [ "DOM", "DOM.Iterable", "ESNext"],
    "target": "es2016",
    "types": ["node"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx"
  },
  "exclude": [ "test/", "./vite.config.ts" ]
}
