{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": false,
    "noImplicitAny": false,
    "strict": true,
    "typeRoots" : [
      "./types/index.d.ts",
      "node_modules/@types"
    ],
    "allowJs": true,
    "lib": [ "es6", "dom"],
    "target": "es6",
    "types": ["node", "jest"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "types/index.d.ts",
  ],
  "exclude": [ "node_modules" ]
}
