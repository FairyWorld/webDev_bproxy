{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots" : [
      "./src/types/",
      "node_modules/@types/"
    ],
    "allowJs": true,
    "lib": [ "DOM", "DOM.Iterable", "ESNext"],
    "target": "es2016",
    "types": ["jest", "node"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
  },
  "exclude": [ "./vite.config.ts", "./dist" ],
}
