{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "strict": true,
    "typeRoots" : [
      "src/types/index.d.ts",
    ],
    "allowJs": false,
    "lib": [ "es2016", "dom"],
    "target": "es2016",
    "types": ["node"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx"
  },
  "exclude": [ "node_modules/", "test/", "./vite.config.ts" ]
}
